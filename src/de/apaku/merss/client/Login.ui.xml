<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>

    </ui:style>
    <g:VerticalPanel
        width="100%"
        height="100%">
        <g:CaptionPanel captionText="Sign into your account">
            <g:VerticalPanel
                width="100%"
                height="100%">
                <g:Grid>
                    <g:row>
                        <g:customCell>
                            <g:Label text="Username" />
                        </g:customCell>
                        <g:customCell>
                            <g:TextBox ui:field="loginUserNameField" />
                        </g:customCell>
                    </g:row>
                    <g:row>
                        <g:customCell>
                            <g:Label text="Password" />
                        </g:customCell>
                        <g:customCell>
                            <g:PasswordTextBox
                                ui:field="loginPasswordField" />
                        </g:customCell>
                    </g:row>
                </g:Grid>
                <g:PushButton
                    text="Login"
                    ui:field="loginButton" />
            </g:VerticalPanel>
        </g:CaptionPanel>
        <g:CaptionPanel captionText="Sign up for a new account">
            <g:VerticalPanel
                width="100%"
                height="100%">
                <g:Grid>
                    <g:row>
                        <g:customCell>
                            <g:Label text="New Username" />
                        </g:customCell>
                        <g:customCell>
                            <g:TextBox ui:field="newUserNameField" />
                        </g:customCell>
                    </g:row>
                    <g:row>
                        <g:customCell>
                            <g:Label text="New Password" />
                        </g:customCell>
                        <g:customCell>
                            <g:PasswordTextBox
                                ui:field="newPasswordField" />
                        </g:customCell>
                    </g:row>
                </g:Grid>
                <g:PushButton
                    text="Sign Up"
                    ui:field="signupButton" />
            </g:VerticalPanel>
        </g:CaptionPanel>
    </g:VerticalPanel>
</ui:UiBinder>